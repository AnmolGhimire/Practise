pipeline{
    agent {
        label 'BuildIn-Node'
    }
    stages{
        stage('Creating Image'){
            steps{
                echo "building docker image"
                sh '''
                original_pwd=$(pwd -P)
            
                docker build -t docanmol/practise-jenkins:v$BUILD_NUMBER .
                docker push docanmol/practise-jenkins:v$BUILD_NUMBER

                cd $original_pwd
                sh '''
            }
        }
    }
}

        
        

